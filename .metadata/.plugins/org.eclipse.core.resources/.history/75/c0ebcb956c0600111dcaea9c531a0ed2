package com.practice;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.EntityTransaction;
import javax.persistence.Persistence;

public class Demo1 {
    public static void main(String[] args) {
        // "postgres" must match the <persistence-unit name="..."> in your persistence.xml
        EntityManagerFactory emf = Persistence.createEntityManagerFactory("postgres");
        EntityManager em = emf.createEntityManager();
        EntityTransaction et = em.getTransaction();
        
        try {
            et.begin();

            // Student 1
            Student s1 = new Student();
            s1.setId(101);
            s1.setName("Mohan");
            s1.setPercentage(83.7);
            em.persist(s1);

            // Student 2 - FIXED: using s2 variable
            Student s2 = new Student();
            s2.setId(102); 
            s2.setName("Rahul");
            s2.setPercentage(67.7);
            em.persist(s2);

            // Student 3 - FIXED: using s3 variable
            Student s3 = new Student();
            s3.setId(103);
            s3.setName("Harsh");
            s3.setPercentage(78.7);
            em.persist(s3);

            et.commit();
            System.out.println("Data saved successfully!");
            
        } catch (Exception e) {
            if (et.isActive()) et.rollback(); // Undo changes if something goes wrong
            e.printStackTrace();
        } finally {
            em.close();
            emf.close();
        }
    }
}