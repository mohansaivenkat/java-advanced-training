package com.connectdatabase;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class EmployeeCRUD_operations {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		String url ="jdbc:postgresql://localhost:5432/postgres";
		String un = "postgres";
		String pwd = "170804";
		
		try {
			Class.forName("org.postgresql.Driver");
			
			Connection connect = DriverManager.getConnection(url,un,pwd);
			
			addEmployee(connect);
			
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}
	
	
	public static void addEmployee(
//			String name,Integer id,Integer sal,String loc,
			Connection connect) {
		
		String sql = "insert into employee values (?,?,?,?)";
		
		Scanner sc = new Scanner(System.in);
		
		PreparedStatement pstmt;
		try {
			pstmt = connect.prepareStatement(sql);
			
			System.out.println("Enter Name : ");
			String s = sc.nextLine();
			pstmt.setString(1, s);
			
			System.out.println("Enter id : ");
			Integer id = sc.nextInt();
			pstmt.setInt(2, id);
			
			
			System.out.println("Enter Salary : ");
			Integer sal = sc.nextInt();
			pstmt.setInt(3, sal);
			sc.nextLine();
			
			System.out.println("Enter Location : ");
			String loc = sc.nextLine();
			pstmt.setString(4, loc);
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	
	public static void updateEmployeeSalary(Integer id, Integer newSal, Connection connect) {
	    // String concatenation format
	    String sql = "update Employee set salary = " + newSal + " where id = " + id;
	    
	    try {
	        Statement stmt = connect.createStatement();
	        int rowsAffected = stmt.executeUpdate(sql);
	        System.out.println(rowsAffected + " row(s) updated.");
	    } catch (SQLException e) {
	        e.printStackTrace();
	    }
	}
	
	public static void deleteEmployee(Integer id, Connection connect) {
	    // String concatenation format
	    String sql = "delete from Employee where id = " + id;
	    
	    try {
	        Statement stmt = connect.createStatement();
	        int rowsAffected = stmt.executeUpdate(sql);
	        System.out.println(rowsAffected + " row(s) deleted.");
	    } catch (SQLException e) {
	        e.printStackTrace();
	    }
	} 

}
